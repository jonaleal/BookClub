<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.udea.bookclub.controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookClubServlet</servlet-name>
        <servlet-class>com.udea.bookclub.controller.BookClubServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DiscussionServlet</servlet-name>
        <servlet-class>com.udea.bookclub.controller.DiscussionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/list</url-pattern>
        <url-pattern>/user/create-form</url-pattern>
        <url-pattern>/user/create</url-pattern>
        <url-pattern>/user/sign-in-form</url-pattern>
        <url-pattern>/user/sign-in</url-pattern>
        <url-pattern>/user/update-form</url-pattern>
        <url-pattern>/user/update</url-pattern>
        <url-pattern>/user/sign-out</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookClubServlet</servlet-name>
        <url-pattern>/BookClubServlet</url-pattern>
        <url-pattern>/book-club/list</url-pattern>
        <url-pattern>/book-club/show</url-pattern>
        <url-pattern>/book-club/create-form</url-pattern>
        <url-pattern>/book-club/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DiscussionServlet</servlet-name>
        <url-pattern>/DiscussionServlet</url-pattern>
        <url-pattern>/discussion/create</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>user/user-sign-in.jsp</welcome-file>
    </welcome-file-list>
</web-app>
